<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="Configurator.AddPluginSourceWindow"
	x:Name="Window"
	Title="Add Plug-in Source"
	Width="450" Height="175" ResizeMode="NoResize">

	<Grid x:Name="LayoutRoot">
        <Button Height="32" HorizontalAlignment="Right" Margin="0,0,20,20" Name="btnOK" VerticalAlignment="Bottom" Width="80"  FontSize="14" Click="btnOK_Click" IsDefault="True">OK</Button>
        <Button Height="32" HorizontalAlignment="Right" Margin="0,0,110,20" Name="btnCancel" VerticalAlignment="Bottom" Width="80" FontSize="14" Click="btnCancel_Click" IsCancel="True">Cancel</Button>
        <Label Height="28" Margin="20,20,20,0" Name="lblName" VerticalAlignment="Top" FontSize="14">Add plug-in source (can be a URL or a local path)</Label>
        <TextBox Margin="20,50,20,0" Height="28" VerticalAlignment="Top" Name="pluginSource" FontSize="14" ></TextBox>
    </Grid>
</Window>