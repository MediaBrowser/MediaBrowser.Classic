    <Rules>
      <Default Target="[FontThemeModel.Chosen]" Value="[Application.Config.FontTheme]" />
      <Default Target="[ViewThemeModel.Chosen]" Value="[Application.Config.ViewTheme]" />
      <Default Target="[WeatherUnitModel.Chosen]" Value="[Application.Config.YahooWeatherUnit]" />
      <Default Target="[ThemeInitial]" Value="[Application.Config.Theme]" >
        <Actions>
          <Set Target="[ThemeLoaded.Value]" Value="true" />
        </Actions>
      </Default>

      <Changed Source="[NavTimer.Tick]">
        <Conditions>
          <Equality Source="[ShowFull]" ConditionOp="Equals" Value="true" />
          <Equality Source="[Application.NavigatingForward]" ConditionOp="Equals" Value="true" />
        </Conditions>
        <Actions>
          <Invoke Target="[FullConfigNav.NavigateInto]" />
        </Actions>
      </Changed>

      <Default Target="[StartUp.ChosenIndex]" Value="1">
        <Conditions>
          <Equality Source="[Application.AutoLogin]" Value="true" />
          <Equality Source="[Application.AutoLoginUserName]" Value="[Application.CurrentUser.Name]" />
        </Conditions>
      </Default>

      <Default Target="[AutoLogin.Visible]" Value="false">
        <Conditions>
          <Equality Source="[Application.AutoLogin]" Value="true" />
          <Equality Source="[Application.AutoLoginUserName]" ConditionOp="NotEquals" Value="[Application.CurrentUser.Name]" />
        </Conditions>
        <Actions>
          <Set Target="[LoginAsOther.Visible]" Value="true" />
          <Set Target="[LoginAsOther.Content]" Value="[Application.AutoLoginUserName]" >
            <Transformer>
              <FormatTransformer Format="Configured to Login as {0}"/>
            </Transformer>
          </Set>
        </Actions>
      </Default>

      <Binding Source="[AutoLogin.Visible]" Target="[SavePasswordCbx.Visible]" />

      <Changed Source="[StartUp.Chosen]" >
        <Conditions>
          <Equality Source="[StartUp.ChosenIndex]" Value="0" />
        </Conditions>
        <Actions>
          <Set Target="[Application.AutoLogin]" Value="false" />
        </Actions>
      </Changed>

      <Changed Source="[StartUp.Chosen]" >
        <Conditions>
          <Equality Source="[StartUp.ChosenIndex]" Value="1" />
        </Conditions>
        <Actions>
          <Set Target="[Application.AutoLogin]" Value="true" />
        </Actions>
      </Changed>

      <Changed Source="[ClearConnect.Invoked]" >
        <Actions>
          <Invoke Target="[Application.ClearConnectInfo]" />
        </Actions>
      </Changed>

      <!--Bring up keyboard-->
      <Changed Source="[OSK.Invoked]" >
        <Actions>
          <Invoke
                  Target="[AddInHost.MediaCenterEnvironment.ShowOnscreenKeyboard]"
                  editableText="[WeatherLocation]"
                  passwordMasked="false"
                  maxLength="50"/>
        </Actions>
      </Changed>

      <Binding Source="[Application.MessageText]" Target="[MessageBox.Msg]" />
      <Binding Source="[Application.MessageUI]" Target="[MessageBox.Source]" />
      <Changed Source="[CloseMessage.Invoked]">
        <Actions>
          <Set Target="[MessageBox.Visible]" Value="false" />
          <Set Target="[MouseBlocker.Visible]" Value="false" />
          <Set Target="[Application.ShowMessage]" Value="false" />
          <Invoke Target="[MainPanel.NavigateInto]" />
        </Actions>
      </Changed>

      <Changed Source="[Application.ShowMessage]" >
        <Conditions>
          <Equality Source="[Application.ShowMessage]" ConditionOp="Equals" Value="true" />
        </Conditions>
        <Actions>
          <PlaySound Sound="sound://sounds:Miniselect" />
          <Set Target="[MessageBox.Visible]" Value="true" />
          <Set Target="[MouseBlocker.Visible]" Value="true" />
          <Invoke Target="[MsgDelay.Start]" />
        </Actions>
      </Changed>
      <Changed Source="[MsgDelay.Tick]" >
        <Actions>
          <Invoke Target="[MessageBox.NavigateInto]" />
        </Actions>
      </Changed>
      <Changed Source="[Application.ShowMessage]">
        <Conditions>
          <Equality Source="[Application.ShowMessage]" ConditionOp="Equals" Value="false" />
        </Conditions>
        <Actions>
          <Set Target="[MessageBox.Visible]" Value="false" />
          <Set Target="[MouseBlocker.Visible]" Value="false" />
        </Actions>
      </Changed>

      <Condition Source="[Application.ConfigModel.ChosenIndex]" SourceValue="0" ConditionOp="Equals" Target="[Panel1.Visible]" Value="true" />
      <Condition Source="[Application.ConfigModel.ChosenIndex]" SourceValue="1" ConditionOp="Equals" Target="[Panel2.Visible]" Value="true" />
      <Condition Source="[Application.ConfigModel.ChosenIndex]" SourceValue="2" ConditionOp="Equals" Target="[Panel3.Visible]" Value="true" />
      <Condition Source="[Application.ConfigModel.ChosenIndex]" SourceValue="3" ConditionOp="Equals" Target="[Panel4.Visible]" Value="true" />
      <Condition Source="[Application.ConfigModel.ChosenIndex]" SourceValue="3" ConditionOp="GreaterThan">
        <Actions>
          <Set Target="[AddinPanel.Source]" Value="[Application.CurrentConfigPanel]" />
          <Set Target="[Panel99.Visible]" Value="true" />
        </Actions>
      </Condition>

      <Changed Source="[Close.Invoked]">
        <Actions>
          <Invoke Target="[Application.FinishInitialConfig]" />
        </Actions>
      </Changed>
      <Changed Source="[Back.Invoked]">
        <Conditions>
          <Equality Source="[Application.EntryPointPath]" Value="[Application.ConfigEntryPointVal]" />
        </Conditions>
        <Actions>
          <Invoke Target="[Application.Close]" />
        </Actions>
      </Changed>
      <Changed Source="[Back.Invoked]">
        <Conditions>
          <Equality Source="[Application.EntryPointPath]" Value="[Application.ConfigEntryPointVal]" ConditionOp="NotEquals"/>
        </Conditions>
        <Actions>
          <Invoke Target="[Application.Back]" />
        </Actions>
      </Changed>
      <Changed Source="[FullRefresh.Invoked]">
        <Actions>
          <Invoke Target="[Application.FullRefresh]" />
        </Actions>
      </Changed>
      <Changed Source="[UpdateCheck.Invoked]">
        <Actions>
          <Invoke Target="[Application.CheckForSystemUpdate]" prompt="true" />
        </Actions>
      </Changed>

      <Changed Source="[Logout.Invoked]">
        <Actions>
          <Invoke Target="[Application.Logout]" />
        </Actions>
      </Changed>


